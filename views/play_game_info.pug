extends layout_baseGame 

block game_content
  h5(class="alert alert-info", role="alert") The game is currently at the "#{db_game.gameStatus}" phase!
  div(class="container-fluid text-center px-0")
    div(class="row")
      div(class="col")
        a(class="btn btn-outline-primary w-100", href="/quit", role="button") Quit
      div(class="col")
        a(class="btn btn-primary w-100", href=continueURL, role="button") Continue